# ⚠️ COPIAR ESTE ARCHIVO A .env.local Y COMPLETAR CON CREDENCIALES REALES

# API Backend
VITE_API_URL=https://web-production-2d737.up.railway.app

# Autenticación
# Dejar en false para usar autenticación directa con la API
# Cambiar a true solo si se requiere el flujo completo con Firebase
VITE_USE_FIREBASE=false

# Firebase Configuration
# Obtener desde: Firebase Console > Project Settings > Your apps > Web app
# NOTA: Firebase es requerido incluso sin VITE_USE_FIREBASE porque la API 
# necesita un id_token de Firebase para el login
VITE_FIREBASE_API_KEY=AIzaSy...tu-api-key-aqui
VITE_FIREBASE_AUTH_DOMAIN=tu-proyecto.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=tu-proyecto-id
VITE_FIREBASE_STORAGE_BUCKET=tu-proyecto.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abc123def456

# Backend (Calendar/Firebase Admin) - NO usa prefijo VITE_
# Pegar JSON completo en UNA sola línea escapada.
# Esta variable la consume el backend para crear eventos de calendario.
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"tu-proyecto","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"...","client_id":"..."}
