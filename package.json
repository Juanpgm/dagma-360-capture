{
  "name": "calitrack-360",
  "version": "1.0.0",
  "description": "PWA para captura de informaci√≥n de proyectos de infraestructura",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "setup": "npm run setup:windows || npm run setup:unix",
    "setup:windows": "powershell -ExecutionPolicy Bypass -File ./setup.ps1",
    "setup:unix": "bash ./setup.sh",
    "verify": "npm run verify:windows || npm run verify:unix",
    "verify:windows": "powershell -ExecutionPolicy Bypass -File ./verify-setup.ps1",
    "verify:unix": "bash ./verify-setup.sh",
    "dev": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "preview": "npm run preview --workspace=frontend",
    "install:all": "npm install --workspace=frontend"
  },
  "keywords": [
    "pwa",
    "svelte",
    "firebase",
    "geolocation",
    "camera"
  ],
